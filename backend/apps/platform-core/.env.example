# Senfo Platform Core Environment Configuration

# Database (MongoDB)
# For local MongoDB: mongodb://localhost:27017/senfo
# For MongoDB Atlas: mongodb+srv://username:password@cluster.xxxxx.mongodb.net/senfo
DATABASE_URL="mongodb://localhost:27017/senfo"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRES_IN="7d"

# Node Environment
NODE_ENV="development"

# Debug Mode (only works when NODE_ENV=development)
# Set to "true" for detailed import/indexing logs
DEBUG_MODE="true"

# Neo4j Configuration
NEO4J_URI="bolt://localhost:7687"
NEO4J_USER="neo4j"
NEO4J_PASSWORD="supersecurepassword"

# Zoekt Code Search
ZOEKT_URL="http://localhost:6070"

# Repository Storage Path (where repos are cloned locally)
REPOS_BASE_PATH="./repos"
